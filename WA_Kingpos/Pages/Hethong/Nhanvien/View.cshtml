@page
@model WA_Kingpos.Pages.Nhanvien.ViewModel
@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
    ViewData["Name"] = "nhanvien";
}
<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-sm">
                    <tbody>
                        <tr>
                            <th>Mã :</th>
                            <td>@Model.item.manhanvien</td>
                        </tr>
                        <tr>
                            <th>Tên :</th>
                            <td>@Model.item.tennhanvien</td>
                        </tr>
                        <tr>
                            <th>Bộ phận :</th>
                            <td>@Model.item.phongban</td>
                        </tr>
                        <tr>
                            <th>Ngày sinh :</th>
                            <td>@Model.item.ngaysinh</td>
                        </tr>
                        <tr>
                            <th>Giới tính :</th>
                            <td>@Model.item.gioitinh</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ :</th>
                            <td>@Model.item.diachi</td>
                        </tr>
                        <tr>
                            <th>Điện thoại :</th>
                            <td>@Model.item.dienthoai</td>
                        </tr>
                        <tr>
                            <th>Email :</th>
                            <td>@Model.item.email</td>
                        </tr>
                        <tr>
                            <th>Ngày nhận việc :</th>
                            <td>@Model.item.NGAYNHANVIEC</td>
                        </tr>
                        <tr>
                            <th>Hình thức :</th>
                            <td>@Model.item.HINHTHUC</td>
                        </tr>
                        @*<tr>
                                <th>Người quản lý :</th>
                                <td>@Model.item.TEN_NGUOIQUANLY</td>
                            </tr>*@
                        <tr>
                            <th>Sử dụng :</th>
                            @if (@Model.item.sudung.ToString().ToLower() == "true")
                            {
                                <td><input type="checkbox" checked></td>
                            }
                            else
                            {
                                <td><input type="checkbox"></td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-primary" role="button" asp-page="Index">Trở lại danh sách</a>
                @if (Model.bSua)
                {
                    <a class="btn btn-warning" role="button" asp-page="./Edit" asp-route-id="@Model.item.manhanvien">Sửa</a>
                }
                @if (Model.bXoa)
                {
                    <a class="btn btn-danger" role="button" asp-page="./Delete" asp-route-id="@Model.item.manhanvien">Xóa</a>
                }
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
