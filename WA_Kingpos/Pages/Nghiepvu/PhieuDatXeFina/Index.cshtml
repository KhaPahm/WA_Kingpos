                            </tbody>
                        </table>
                    </div> *@

                    <div class="card card-success">
                        <div class="card-header bg-secondary">
                            <h3 class="card-title">DANH SÁCH ĐƠN HÀNG</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @for (var i = 0; i < Model.ListPhieudathang.Count; i++)
                                {
                                    <div class="col-md-2">
                                        <div class="card card-widget widget-user-2">
                                            <div class="card-footer p-0">
                                                <ul class="nav flex-column">
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Mã phiếu
                                                            <input asp-for="ListPhieudathang[i].maphieu" type="text" hidden>
                                                            <span class="float-right text-info">
                                                                @Model.ListPhieudathang[i].maphieu
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Nhân viên
                                                            <input asp-for="ListPhieudathang[i].nhanvien" type="text" hidden>
                                                            <span class="float-right text-info">
                                                                @Model.ListPhieudathang[i].nhanvien
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Ngày lập
                                                            <input asp-for="ListPhieudathang[i].ngaylap" type="text" hidden>
                                                            <span class="float-right text-info">
                                                                @Model.ListPhieudathang[i].ngaylap
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Khách hàng
                                                            <input asp-for="ListPhieudathang[i].khachhang" type="text" hidden>
                                                            <span class="float-right text-info">
                                                                @Model.ListPhieudathang[i].khachhang
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Số lượng
                                                            <input asp-for="ListPhieudathang[i].soluong" type="text" hidden>
                                                            <span class="float-right text-info">
                                                                @Model.ListPhieudathang[i].soluong
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <div class="d-flex justify-content-center">
