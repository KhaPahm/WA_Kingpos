@page
@model WA_Kingpos.Pages.Nghiepvu.PhieuDatXeFina.IndexModel
@{
    ViewData["Title"] = "Thêm Phiếu Đặt Xe";
    ViewData["Name"] = "PhieuDatXe";
}
<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form method="post">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden>
                        <label asp-for="PHIEUDATXE.MAPDNDC" class="control-label">Số phiếu</label>
                        <input type="text" asp-for="PHIEUDATXE.MAPDNDC" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATXE.MAPDNDC" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="PHIEUDATXE.NGAYLAPPHIEU" class="control-label">Ngày đặt</label>
                        <input type="text" asp-for="PHIEUDATXE.NGAYLAPPHIEU" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATXE.NGAYLAPPHIEU" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATXE.MA_KHO">Kho hàng</label>
                        <select asp-for="PHIEUDATXE.MA_KHO" onchange='if(this.value != 0) { this.form.submit(); }' class="form-control select2bs4" style="width: 100%;">
                            <option value="0" selected disabled hidden>Chọn kho hàng</option>
                            @foreach (var item in Model.ListKho)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="PHIEUDATXE.MA_KHO" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Ngày bốc hàng</label>
                        <div class="input-group date" id="reservationdate" data-target-input="nearest">
                            <input type="text" asp-for="PHIEUDATXE.NGAYGIAOHANG" class="form-control datetimepicker-input" data-target="#reservationdate">
                            <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="PHIEUDATXE.NGAYGIAOHANG" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATXE.MADOITUONG">Tài xế</label>
                        <select asp-for="PHIEUDATXE.MADOITUONG" onchange='if(this.value != 0) { this.form.submit(); }' class="form-control select2bs4" style="width: 100%;">
                            <option value="0" selected disabled hidden>Chọn tài xế</option>
                            @foreach (var item in Model.ListTaixe)
                            {
                                <option value="@item.MA">@item.TEN</option>
                            }
                        </select>
                        <span asp-validation-for="PHIEUDATXE.MADOITUONG" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATXE.CMND_TAIXE" class="control-label">CMND</label>
                        <input type="text" asp-for="PHIEUDATXE.CMND_TAIXE" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATXE.CMND_TAIXE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATXE.DIENTHOAI" class="control-label">Điện thoại</label>
                        <input type="text" asp-for="PHIEUDATXE.DIENTHOAI" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATXE.DIENTHOAI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATXE.BIENSOXE" class="control-label">Biển số xe</label>
                        <input type="text" asp-for="PHIEUDATXE.BIENSOXE" class="form-control" />
                        <span asp-validation-for="PHIEUDATXE.BIENSOXE" class="text-danger"></span>
                    </div>
