@page
@model WA_Kingpos.Pages.DatHang.DetailModel
@{
    ViewData["Title"] = "Chi Tiết Phiếu Đặt Hàng";
    ViewData["Name"] = "duyetdondathang";
}
<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form method="post">
                    <table class="table table-sm">
                        <tbody>
                            <tr>
                                <th class="text-nowrap">Số phiếu :</th>
                                <td class="font-weight-bold">@Model.item.maphieu</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap">Nhân viên :</th>
                                <td class="font-weight-bold">@Model.item.nhanvien</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap">Ngày đặt :</th>
                                <td class="font-weight-bold">@Model.item.ngaylap</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap">Kho :</th>
                                <td class="font-weight-bold">@Model.item.kho</td>
                            </tr>
                            <tr>
                                <th class="text-nowrap">Khách hàng :</th>
                                <td class="font-weight-bold">@Model.item.khachhang</td>
                            </tr>
                            @* <tr>
                                <th>Địa chỉ :</th>
                                <td>@Model.item.diachi</td>
                            </tr>
                            <tr>
                                <th>Điện thoại :</th>
                                <td>@Model.item.dienthoai</td>
                            </tr>
                            <tr>
                                <th>Email :</th>
                                <td>@Model.item.email</td>
                            </tr>
                            <tr>
                                <th>Mã số thuế :</th>
                                <td>@Model.item.masothue</td>
                            </tr>
                            <tr>
                                <th>CMT/CCCD :</th>
                                <td>@Model.item.cccd</td>
                            </tr> *@
                        </tbody>
                    </table>
                    @* <p class="font-weight-bold">DANH SÁCH SẢN PHẨM</p>
                    <table id="tablesimple" class="table table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Đơn vị tính</th>
                                <th>Đơn giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listitem)
                            {
                                <tr>
                                    <td>@item.stt</td>
                                    <td>@item.masanpham</td>
                                    <td>@item.tensanpham</td>
                                    <td>@item.donvitinh</td>
                                    <td>@item.dongia</td>
                                    <td>@item.soluong</td>
                                    <td>@item.thanhtien</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>@String.Format("{0:N0}", @Model.tongsoluong)</th>
                                <th>@String.Format("{0:N0}", @Model.tongthanhtien)</th>
                            </tr>
                        </tfoot>
                    </table> *@

                    <div class="card card-success">
                        <div class="card-header bg-secondary">
                            <h3 class="card-title">DANH SÁCH SẢN PHẨM</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model.listitem)
                                {
                                    <div class="col-md-2">
                                        <div class="card card-widget widget-user-2">
                                            <div class="card-footer p-0">
                                                <ul class="nav flex-column">
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            STT <span class="float-right text-info">@item.stt</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Mã sản phẩm <span class="float-right text-info">@item.masanpham</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Tên sản phẩm <span class="float-right text-info">@item.tensanpham</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Đơn vị tính <span class="float-right text-info">@item.donvitinh</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Đơn giá <span class="float-right text-info">@item.dongia</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Số lượng <span class="float-right text-info">@item.soluong</span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Thành tiền <span class="float-right text-info">@item.thanhtien</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer font-weight-bold text-info">
                            Tổng tiền: @String.Format("{0:N0}", @Model.tongthanhtien)
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#confirmModal">
                            Duyệt phiếu
                        </button>
                        <div class="modal" id="confirmModal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Thông báo</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Xác nhận bạn muốn DUYỆT phiếu đặt hàng này ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
                                        <button type="submit" name="submitButton" value="approve" class="btn btn-success">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal1">
                            Không duyệt
                        </button>
                        <div class="modal" id="confirmModal1" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Thông báo</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Xác nhận bạn muốn KHÔNG DUYỆT phiếu đặt hàng này ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
                                        <button type="submit" name="submitButton" value="noapprove" class="btn btn-danger">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                       
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-primary" role="button" asp-page="Index">Trở lại danh sách</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
