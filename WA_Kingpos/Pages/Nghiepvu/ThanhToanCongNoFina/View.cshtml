                    </div>
                    <div class="card-footer font-weight-bold text-info">
                        Tổng tiền: @String.Format("{0:N0}", @Model.PHIEUDUYETTHU.SOTIEN)
                    </div>
                </div>

                <br />
                <div class="form-group">
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-primary" role="button" asp-page="Index">Thêm phiếu mới</a>
                @if (@Model.PHIEUDUYETTHU.TRANG_THAI == "0")
                {
                    <a class="btn btn-warning" role="button" asp-page="Edit" asp-route-id="@Model.PHIEUDUYETTHU.SO_PHIEU">Chỉnh sửa phiếu này</a>
                }
                <a class="btn btn-info" role="button" asp-page="Lists">Danh sách phiếu đã tạo</a>
