@page "{id:int?}"
@model WA_Kingpos.Pages.Nghiepvu.DangKyKhuonMatZk_V2._KS_KhachHangModel
@{
    Layout = null; // return only the fragment (no layout)
}

<div data-modal-title="@Model.Title" data-can-save="@(!Model.IsReadOnly)"></div>

<form id="customerForm" class="needs-validation" method="post" asp-page-handler="Save">
    <input type="hidden" name="Mode" value="@Model.Mode" />
    <input type="hidden" asp-for="KS_KhachHang.MA_KH" />
     

    <div class="container-fluid">
        <div class="form-row mb-0">
            <div class="col-xl-12">
                <div class="text-center mb-3">
                    <div id="photoReview">
                        @if (string.IsNullOrEmpty(@Model.KS_KhachHang.FACE_PHOTO))
                        {
                            <div>KHÁCH HÀNG CHƯA CẬP NHẬT ẢNH</div>
                        }
                        else
                        {
                            <img src="data:image/jpeg;base64,@Model.KS_KhachHang.FACE_PHOTO"
                                 alt="Customer photo"
                                 class="img-thumbnail"
                                 style="max-width:250px; max-height:250px; min-width:150px; min-height:150px" />
                        }
                    </div>

                    @if (!Model.IsReadOnly)
                    {
                        <div class="d-flex justify-content-center mt-2 mb-2">
                            <!-- Take photo from camera -->
                            <div class="p-2" title="Chụp ảnh">
                                <button class="btn btn-outline-info btn-md" type="button" onclick="openCameraClick(this)">
                                    <i class="fa fa-camera"></i>
                                </button>
                            </div>

                            <div class="p-2 align-self-center">
                                hoặc
                            </div>

                            <!-- Choose from PC -->
                            <div class="p-2" title="Chọn ảnh từ máy">
                                <label class="btn btn-outline-secondary btn-md mb-1">
                                    <i class="fa fa-image"></i>
                                    <input type="file" id="fileInput" accept="image/*" class="d-none" onchange="fileInputChange(this)" />
                                </label>
                            </div>
                        </div> 
                    }
                    
                    <!-- Hidden field to store base64 string -->
                    <input type="hidden" asp-for="KS_KhachHang.FACE_PHOTO" id="photoBase64" />

                </div>
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.MA_KH">Mã khách hàng</label>
                <input asp-for="KS_KhachHang.MA_KH" class="form-control" readonly />
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.TEN">Tên khách hàng <span class="text-danger">*</span></label>
                <input type="text" asp-for="KS_KhachHang.TEN" class="form-control" readonly="@Model.IsReadOnly" required/>
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.DIENTHOAI">Điện thoại <span class="text-danger">*</span></label>
                <input type="tel" asp-for="KS_KhachHang.DIENTHOAI" class="form-control" readonly="@Model.IsReadOnly" required />
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.NGAYSINH">Ngày sinh </label>
                <div class="input-group date @(Model.IsReadOnly ? "" : "input-datepicker")" data-target-input="nearest">
                    <input type="text" asp-for="KS_KhachHang.NGAYSINH" class="form-control">
                    <div class="input-group-append">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                </div>
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.GIOITINH">Giới tính</label>
                <select asp-for="KS_KhachHang.GIOITINH"
                        class="form-control"
                        readonly="@Model.IsReadOnly"
                        disabled="@Model.IsReadOnly">
                    <option value="Nam">Nam</option>
                    <option value="Nu">Nữ</option>
                </select>
            </div>

            <div class="form-group col-xl-6">
                <label asp-for="KS_KhachHang.EMAIL">Email</label>
                <input type="email" asp-for="KS_KhachHang.EMAIL" class="form-control" readonly="@Model.IsReadOnly" />
            </div>

            <div class="form-group col-xl-12">
                <label asp-for="KS_KhachHang.DIACHI">Địa chỉ</label>
                <textarea class="form-control" rows="3" readonly="@Model.IsReadOnly" asp-for="KS_KhachHang.DIACHI"></textarea>
            </div>

        </div>
    </div>

</form>




