@model WA_Kingpos.Pages.Nghiepvu.PhieuDatHangFina.IndexModel
@{
    ViewData["Title"] = "Thêm Phiếu Đặt Hàng";
    ViewData["Name"] = "PhieuDatHang";
}
<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form method="post">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden>
                        <label asp-for="PHIEUDATHANG.MAPDNDC" class="control-label">Số phiếu</label>
                        <input type="text" asp-for="PHIEUDATHANG.MAPDNDC" class="form-control"  readonly="readonly" />
                        <span asp-validation-for="PHIEUDATHANG.MAPDNDC" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="PHIEUDATHANG.NGAYLAPPHIEU" class="control-label">Ngày đặt</label>
                        <input type="text" asp-for="PHIEUDATHANG.NGAYLAPPHIEU" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATHANG.NGAYLAPPHIEU" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATHANG.MA_KHO">Kho hàng</label>
                        <select asp-for="PHIEUDATHANG.MA_KHO" onchange='if(this.value != 0) { this.form.submit(); }' class="form-control select2bs4" style="width: 100%;" id="txtKhoHang">
                            <option value="0" selected disabled hidden>Chọn kho hàng</option>
                            @foreach (var item in Model.ListKho)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                        <span asp-validation-for="PHIEUDATHANG.MA_KHO" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATHANG.MADOITUONG">Khách hàng</label>
                        <select asp-for="PHIEUDATHANG.MADOITUONG" onchange='if(this.value != 0) { this.form.submit(); }' class="form-control select2bs4" style="width: 100%;" id="txtKhachHang">
                            <option value="0" selected disabled hidden>Chọn khách hàng</option>
                            @foreach (var item in Model.ListKhachang)
                            {
                                <option value="@item.MA">@item.TEN</option>
                            }
                        </select>
                        <span asp-validation-for="PHIEUDATHANG.MADOITUONG" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATHANG.DIACHI" class="control-label">Địa chỉ</label>
                        <input type="text" asp-for="PHIEUDATHANG.DIACHI" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATHANG.DIACHI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATHANG.DIENTHOAI" class="control-label">Điện thoại</label>
                        <input type="text" asp-for="PHIEUDATHANG.DIENTHOAI" class="form-control" readonly="readonly" />
                        <span asp-validation-for="PHIEUDATHANG.DIENTHOAI" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PHIEUDATHANG.MA_HANGHOA" class="control-label">Sản phẩm</label>
                        <select asp-for="PHIEUDATHANG.MA_HANGHOA" onchange='if(this.value != 0) { this.form.submit(); }' class="form-control select2bs4" style="width: 100%;" id="txtSanpham">
                            <option value="0" selected disabled hidden>Chọn sản phẩm</option>
                            @foreach (var item in Model.ListHanghoa)
                            {
                                <option value="@item.MA_HANGHOA">@item.TEN_HANGHOA</option>
                            }
                        </select>
                        <span asp-validation-for="PHIEUDATHANG.MA_HANGHOA" class="text-danger"></span>
                    </div>
