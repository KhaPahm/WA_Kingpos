                    <div class="card card-success">
                        <div class="card-header bg-secondary">
                            <h3 class="card-title">DANH SÁCH SẢN PHẨM</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @for (var i = 0; i < Model.PHIEUDATHANG.listHANGHOA.Count; i++)
                                {
                                    <div class="col-md-2">
                                        <div class="card card-widget widget-user-2">
                                            <div class="card-footer p-0">
                                                <ul class="nav flex-column">
                                                    <li>
                                                        <input type="hidden" asp-for="PHIEUDATHANG .listHANGHOA [i].MA_HANGHOA" />
                                                        <input type="hidden" asp-for="PHIEUDATHANG .listHANGHOA [i].TEN_HANGHOA" />
                                                        <input type="hidden" asp-for="PHIEUDATHANG .listHANGHOA [i].DVT" />
                                                        <input type="hidden" asp-for="PHIEUDATHANG .listHANGHOA [i].THANHTIEN" />
                                                        <input type="hidden" asp-for="PHIEUDATHANG .listHANGHOA [i].STT" />
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            <h4 class="float-left">
                                                                @Model.PHIEUDATHANG.listHANGHOA[i].TEN_HANGHOA
                                                            </h4>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Đơn vị tính: <span class="float-right">
                                                                @Model.PHIEUDATHANG.listHANGHOA[i].DVT
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link">
                                                            <div class="d-flex flex-row">
                                                                <p>Đơn giá:</p>
                                                                <p class="float-right badge">
                                                                    <input type="text" pattern="[0-9,]*" title="Vui lòng nhập số" class="form-control" asp-for="PHIEUDATHANG .listHANGHOA [i].DONGIA" />
                                                                </p>
                                                            </div>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link">
                                                            <div class="d-flex flex-row">
                                                                <p>Số lượng: </p>
                                                                <p class="float-right">
                                                                    <td><input type="text" pattern="[0-9,]*" title="Vui lòng nhập số" class="form-control" asp-for="PHIEUDATHANG .listHANGHOA [i].SL"/></td>
                                                                </p>
                                                            </div>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            Thành tiền: <span class="float-right">
                                                                @Model.PHIEUDATHANG.listHANGHOA[i].THANHTIEN
                                                            </span>
                                                        </a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a href="#" class="nav-link">
                                                            <p class="d-flex justify-content-center">
                                                                @{
                                                                    var svalue = "btn2Delete_" + @Model.PHIEUDATHANG.listHANGHOA[i].STT.ToString();
                                                                }
                                                                <button type="submit" name="submitButton" value="btn1ReLoad" class="btn btn-warning btn-sm">Xác nhận</button>
                                                                <span>&nbsp</span>
                                                                <button type="submit" name="submitButton" value="@svalue" class="btn btn-danger btn-sm">Xóa</button>
                                                            </p>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div id="yasuo" class="card-footer font-weight-bold text-info">
                            Tổng tiền: @String.Format("{0:N0}", @Model.PHIEUDATHANG.SOTIEN)
                        </div>
                    </div>



                    <br />
                    <div class="form-group">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#confirmModal">
                            Lưu Phiếu Đặt Hàng
                        </button>
                        <div class="modal" id="confirmModal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Thông báo</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Xác nhận bạn muốn tạo phiếu đặt hàng này không?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy bỏ</button>
                                        <button type="submit" name="submitButton" value="btn3Create" class="btn btn-success">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-primary" role="button" asp-page="Lists">Danh sách phiếu đã tạo</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->